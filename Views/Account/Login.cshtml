@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Giriş Yap</h2>
        <hr />
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger">@ViewData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <div class="form-group mb-3">
                <label for="email" class="control-label">E-Posta</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label for="password" class="control-label">Şifre</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Giriş Yap" class="btn btn-primary w-100" />
            </div>
        </form>
        <div class="text-center">
            <p>Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p>
        </div>
    </div>
</div>
