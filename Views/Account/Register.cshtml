@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Kayıt Ol</h2>
        <hr />
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger">@ViewData["Error"]</div>
        }

        <form asp-action="Register" method="post">
            <!-- TC Kimlik No -->
            <div class="form-group mb-3">
                <label for="tcno" class="control-label">TC Kimlik No</label>
                <input type="text"
                       id="tcno"
                       name="tcNo"
                       class="form-control"
                       maxlength="11"
                       pattern="\d{11}"
                       required />
            </div>

            <!-- Ad -->
            <div class="form-group mb-3">
                <label for="username" class="control-label">Ad</label>
                <input type="text"
                       id="username"
                       name="firstName"
                       class="form-control"
                       required />
            </div>

            <!-- Soyad -->
            <div class="form-group mb-3">
                <label for="lastName" class="control-label">Soyad</label>
                <input type="text"
                       id="lastName"
                       name="lastName"
                       class="form-control"
                       required />
            </div>

            <!-- Doğum Tarihi -->
            <div class="form-group mb-3">
                <label for="birthDate" class="control-label">Doğum Tarihi</label>
                <input type="date"
                       id="birthDate"
                       name="birthDate"
                       class="form-control"
                       required />
            </div>

            <!-- E-posta -->
            <div class="form-group mb-3">
                <label for="email" class="control-label">E-Posta</label>
                <input type="email"
                       id="email"
                       name="email"
                       class="form-control"
                       required />
            </div>

            <!-- Telefon -->
            <div class="form-group mb-3">
                <label for="phone" class="control-label">Telefon</label>
                <input type="tel"
                       id="phone"
                       name="phone"
                       class="form-control"
                       required />
            </div>

            <!-- Şifre -->
            <div class="form-group mb-3">
                <label for="password" class="control-label">Şifre</label>
                <input type="password"
                       id="password"
                       name="password"
                       class="form-control"
                       required />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Kayıt Ol" class="btn btn-primary w-100" />
            </div>
        </form>

        <div class="text-center">
            <p>Zaten hesabınız var mı? <a asp-action="Login">Giriş Yap</a></p>
        </div>
    </div>
</div>