@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Kayıt Ol</h2>
        <hr />
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger">@ViewData["Error"]</div>
        }

        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label for="username" class="control-label">Kullanıcı Adı</label>
                <input type="text" name="username" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label for="email" class="control-label">E-Posta</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label for="password" class="control-label">Şifre</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Kayıt Ol" class="btn btn-primary w-100" />
            </div>
        </form>
        <div class="text-center">
            <p>Zaten hesabınız var mı? <a asp-action="Login">Giriş Yap</a></p>
        </div>
    </div>
</div>
