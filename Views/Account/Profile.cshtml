@model prgmlab3.Models.UserModel

@{
    ViewData["Title"] = "Profil Bilgilerim";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Profil Bilgilerim</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Ad Soyad:</div>
                <div class="col-sm-9">@Model.FirstName @Model.LastName</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Kullanıcı Adı:</div>
                <div class="col-sm-9">@Model.Username</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">E-Posta:</div>
                <div class="col-sm-9">@Model.Mail</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">TC Kimlik No:</div>
                <div class="col-sm-9">@Model.TcNo</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Telefon:</div>
                <div class="col-sm-9">@Model.Phone</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Doğum Tarihi:</div>
                <div class="col-sm-9">@Model.BirthDate.ToString("dd.MM.yyyy")</div>
            </div>
        </div>
    </div>
</div>