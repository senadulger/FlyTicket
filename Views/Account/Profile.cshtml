@model prgmlab3.Models.UserModel

@{
    // Sayfa başlığı
    ViewData["Title"] = "Profil Bilgilerim";
}

<div class="container mt-4">
    <h2 class="page-title">Profil Bilgilerim</h2>
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="table-responsive">

                <!-- Kullanıcı bilgilerini gösteren tablo -->
                <table class="table table-custom">

                    <!-- Tablo başlık alanı -->
                    <thead>
                        <tr>
                            <th colspan="2">Kullanıcı Bilgileri</th>
                        </tr>
                    </thead>

                    <!-- Tablo içerik alanı -->
                    <tbody>

                        <!-- Ad Soyad -->
                        <tr>
                            <td class="fw-bold" style="width: 30%">Ad Soyad</td>
                            <td>@Model.FirstName @Model.LastName</td>
                        </tr>

                        <!-- E-Posta -->
                        <tr>
                            <td class="fw-bold">E-Posta</td>
                            <td>@Model.Mail</td>
                        </tr>

                        <!-- TC Kimlik No -->
                        <tr>
                            <td class="fw-bold">TC Kimlik No</td>
                            <td>@Model.TcNo</td>
                        </tr>

                        <!-- Telefon -->
                        <tr>
                            <td class="fw-bold">Telefon</td>
                            <td>@Model.Phone</td>
                        </tr>

                        <!-- Doğum Tarihi -->
                        <tr>
                            <td class="fw-bold">Doğum Tarihi</td>
                            <td>
                                @Model.BirthDate.ToString("dd.MM.yyyy")
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>