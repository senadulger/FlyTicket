@model List<Dictionary<string, object>>
@{
    ViewData["Title"] = "Rezervasyonlarım";
}

<div class="container mt-4">
    <h2>Rezervasyonlarım</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info mt-3">Henüz bir rezervasyonunuz bulunmamaktadır.</div>
    }
    else
    {
        <table class="table table-bordered table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Uçuş</th>
                    <th>Tarih</th>
                    <th>Koltuk</th>
                    <th>Fiyat</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    var status = row["status"] as string;
                    var isCancelled = string.Equals(status, "Cancelled", StringComparison.OrdinalIgnoreCase);
                    <tr class="@(isCancelled ? "table-secondary text-muted" : "")">
                        <td>@row["flight_info"]</td>
                        <td>@row["date"]</td>
                        <td>@row["seat"]</td>
                        <td>@row["price"] ₺</td>
                        <td>@status</td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (!isCancelled && (bool)row["can_checkin"])
                                {
                                    var isCheckedIn = string.Equals(status, "CheckedIn", StringComparison.OrdinalIgnoreCase);
                                    if (!isCheckedIn)
                                    {
                                        <form asp-action="CheckIn" method="post" style="display:inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@row["id"]" />
                                            <button type="submit" class="btn btn-sm btn-success me-1">Check-in</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success me-1">Checked-in</span>
                                    }
                                }

                                @if (!isCancelled && (bool)row["can_cancel"])
                                {
                                    <form asp-action="CancelReservation" method="post" style="display:inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@row["id"]" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Rezervasyonu iptal etmek istediğinize emin misiniz?');">İptal Et</button>
                                    </form>
                                }
                                else if (!isCancelled)
                                {
                                    <span class="text-muted ms-1" title="Geçmiş uçuşlar iptal edilemez">İptal Edilemez</span>
                                }
                                else
                                {
                                    <span class="text-muted">İptal Edildi</span>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>