@model List<Dictionary<string, object>>

@{
    // Sayfa başlığı
    ViewData["Title"] = "Rezervasyonlarım";
}

<div class="container mt-4">
    <h2 class="page-title">Rezervasyonlarım</h2>

    <!-- TempData: başarı/hata mesajları -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3 mb-4">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3 mb-4">@TempData["Error"]</div>
    }

    <!-- Rezervasyon yoksa bilgilendirme -->
    @if (Model.Count == 0)
    {
        <div class="alert alert-info mt-3">Henüz bir rezervasyonunuz bulunmamaktadır.</div>
    }
    else
    {
        <div class="table-responsive">

            <!-- Rezervasyonlar tablosu -->
            <table class="table table-custom mb-0">

                <!-- Tablo başlıkları -->
                <thead>
                    <tr>
                        <th>Uçuş</th>
                        <th>Tarih</th>
                        <th>Koltuk</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <!-- Tablo içerik alanı -->
                <tbody>
                    @foreach (var row in Model)
                    {
                        @* Durum bilgisi ve iptal kontrolü *@
                        var status = row["status"] as string;
                        var isCancelled = string.Equals(status, "Cancelled", StringComparison.OrdinalIgnoreCase);

                        @* İptal edilmiş rezervasyonları daha soluk göstermek için class *@
                        <tr class="@(isCancelled ? "bg-light text-muted" : "")">

                            <!-- Uçuş bilgisi -->
                            <td class="fw-medium">@row["flight_info"]</td>

                            <!-- Tarih -->
                            <td>@row["date"]</td>

                            <!-- Koltuk numarası -->
                            <td>@row["seat"]</td>

                            <!-- Fiyat -->
                            <td class="fw-bold">@row["price"] ₺</td>

                            <!-- Durum -->
                            <td>@status</td>

                            <!-- İşlem butonları: Check-in ve İptal -->
                            <td>
                                <div class="d-flex align-items-center gap-2">

                                    @* Check-in: Rezervasyon iptal değilse ve check-in izni varsa *@
                                    @if (!isCancelled && (bool)row["can_checkin"])
                                    {
                                        // Eğer statü CheckedIn ise tekrar check-in butonu gösterilmez
                                        var isCheckedIn = string.Equals(status, "CheckedIn", StringComparison.OrdinalIgnoreCase);

                                        if (!isCheckedIn)
                                        {
                                            <!-- Check-in formu -->
                                            <form asp-action="CheckIn" method="post">
                                                @Html.AntiForgeryToken()

                                                <!-- Check-in yapılacak rezervasyonun ID'si -->
                                                <input type="hidden" name="id" value="@row["id"]" />

                                                <!-- Check-in butonu -->
                                                <button type="submit" class="btn-action-checkin">Check-in</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <!-- Zaten check-in yapılmışsa bilgi badge'i -->
                                            <span class="badge bg-success">Checked-in</span>
                                        }
                                    }

                                    @* İptal: Rezervasyon iptal değilse ve iptal izni varsa *@
                                    @if (!isCancelled && (bool)row["can_cancel"])
                                    {
                                        <!-- Rezervasyon iptal formu -->
                                        <form asp-action="CancelReservation" method="post">
                                            @Html.AntiForgeryToken()

                                            <!-- İptal edilecek rezervasyonun ID'si -->
                                            <input type="hidden" name="id" value="@row["id"]" />

                                            <!-- İptal butonu -->
                                            <button type="submit" class="btn-action-cancel"
                                                onclick="return confirm('Rezervasyonu iptal etmek istediğinize emin misiniz?');">
                                                İptal Et
                                            </button>
                                        </form>
                                    }
                                    else if (!isCancelled)
                                    {
                                        @* İptal edilemiyorsa sebep varsa göster *@
                                        <span class="text-muted small">
                                            @(row.ContainsKey("cancel_reason") && !string.IsNullOrEmpty(row["cancel_reason"] as
                                                                            string)
                                                                            ? row["cancel_reason"]
                                                                            : "")
                                        </span>
                                    }
                                    else
                                    {
                                        @* Rezervasyon iptal edildiyse sabit bilgi yazısı *@
                                        <span class="text-muted">İptal Edildi</span>
                                    }

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>