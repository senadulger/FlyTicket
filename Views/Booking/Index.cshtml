@model List<prgmlab3.Models.FlightModel>
@{
    ViewData["Title"] = "Uçuş Ara";
    var airportMap = ViewBag.AirportMap as Dictionary<int, string>;
}

<div class="container mt-4">
    <h2 class="mb-4">Uçuş Ara</h2>
    
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-3">
                    <label for="from" class="form-label">Nereden</label>
                    <input type="text" class="form-control" name="from" placeholder="Şehir veya Havaalanı" value="@Context.Request.Query["from"]">
                </div>
                <div class="col-md-3">
                    <label for="to" class="form-label">Nereye</label>
                    <input type="text" class="form-control" name="to" placeholder="Şehir veya Havaalanı" value="@Context.Request.Query["to"]">
                </div>
                <div class="col-md-2">
                    <label for="startDate" class="form-label">Başlangıç Tarihi</label>
                    <input type="date" class="form-control" name="startDate" value="@Context.Request.Query["startDate"]">
                </div>
                <div class="col-md-2">
                    <label for="endDate" class="form-label">Bitiş Tarihi</label>
                    <input type="date" class="form-control" name="endDate" value="@Context.Request.Query["endDate"]">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Ara</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">Aradığınız kriterlere uygun uçuş bulunamadı.</div>
    }
    else
    {
        <div class="row">
            @foreach (var flight in Model)
            {
                <div class="col-md-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <h5 class="card-title">@airportMap?[flight.DepartureLocation]</h5>
                                    <p class="card-text text-muted">@flight.DepartureTime.ToString("g")</p>
                                </div>
                                <div class="col-md-1 text-center">
                                    <i class="bi bi-arrow-right"></i>
                                </div>
                                <div class="col-md-3">
                                    <h5 class="card-title">@airportMap?[flight.ArrivalLocation]</h5>
                                    <p class="card-text text-muted">@flight.ArrivalTime.ToString("g")</p>
                                </div>
                                <div class="col-md-2 text-center">
                                    <h4 class="text-primary">@flight.Price.ToString("F2") ₺</h4>
                                </div>
                                <div class="col-md-3 text-end">
                                    <a asp-action="SelectSeat" asp-route-flightId="@flight.Id" class="btn btn-success">Koltuk Seç</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
