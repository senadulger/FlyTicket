@{
    ViewData["Title"] = "Add Plane";
}

<div class="container mt-4">
    <h2>Add Plane</h2>
    <form asp-controller="Admin" asp-action="AddPlane" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" name="Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Seat Count</label>
            <input type="number" class="form-control" name="SeatCount" required min="1" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary ms-2" asp-controller="Admin" asp-action="Planes">Cancel</a>
    </form>
</div>
